{
    "name": "juanjoya/app-skeleton",
    "description": "Example structure to build applications in PHP without a framework.",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Juan David Joya Ortiz",
            "email": "ing.juanjoya@outlook.com"
        }
    ],
    "require": {
        "php": ">=7.3.0",
        "rdlowrey/auryn": "^1.4",
        "phroute/phroute": "^2.1",
        "patricklouys/http": "^1.4",
        "filp/whoops": "^2.7",
        "siriusphp/validation": "^3.0",
        "twig/twig": "^3.0",
        "illuminate/database": "5.1.*",
        "illuminate/pagination": "5.1.*",
        "robmorgan/phinx": "^0.12.1",
        "vlucas/phpdotenv": "^4.1",
        "fzaninotto/faker": "^1.9",
        "psy/psysh": "@stable",
        "hoa/console": "^3.17"
    },
    "require-dev": {
      "squizlabs/php_codesniffer": "^3.3"
    },
    "autoload": {
        "files": ["app/Helpers.php"],
    	"psr-4": {
    		"App\\": "app/" 
    	}
    },
    "scripts": {
        "post-install-cmd": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    }
}
